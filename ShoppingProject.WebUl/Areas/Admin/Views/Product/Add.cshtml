@model ProductAddDto

<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Ürün Yönetimi /</span> Ürün Ekle</h4>

	<div class="row">
		<div class="col-md-12">
			<div class="card mb-4">
				<h5 class="card-header"></h5>
				<form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="CategoryId">Kategori</label>
							<select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
							<span asp-validation-for="CategoryId" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Name" class="form-label">Ürün Adı</label>
							<input asp-for="Name" type="text" class="form-control" id="defaultFormControlInput" placeholder="Lütfen ürün adını giriniz." aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group mb-3">
							<label asp-for="Description" class="form-label">Ürün Açıklaması</label>
							<textarea asp-for="Description" type="text" class="form-control" id="defaultFormControlInput" placeholder="Lütfen ürün açıklamasını giriniz." style="min-height:100px;" aria-describedby="defaultFormControlHelp"></textarea>
						</div>
						<div class="form-group mb-3">
							<label asp-for="UnitsInStock" class="form-label">Stok Adeti</label>
							<input asp-for="UnitsInStock" type="text" class="form-control" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group mb-3">
							<label asp-for="UnitPrice" class="form-label">Adet Fiyatı</label>
							<input asp-for="UnitPrice" type="text" class="form-control" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>